---
interface Props {
  instagramUrl?: string;
  maxPosts?: number;
}

const {
  instagramUrl = 'https://instagram.com/djsnabu',
  maxPosts = 6,
} = Astro.props;

const FEED_URL = import.meta.env.PUBLIC_INSTAGRAM_FEED_URL;
---

<section id="gallery" class="py-20 px-4">
  <div class="container mx-auto max-w-7xl">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
      <span class="text-accent">Instagram</span>
    </h2>

    <div id="ig-grid" class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
      <!-- Ladataan... -->
      {Array.from({ length: maxPosts }).map(() => (
        <div class="glass-effect rounded-2xl aspect-square animate-pulse bg-white/5"></div>
      ))}
    </div>

    <div id="ig-error" class="hidden glass-effect rounded-2xl p-8 text-center max-w-xl mx-auto mb-8">
      <p class="text-white/80 text-lg font-semibold mb-2">Instagram ei ole juuri nyt saatavilla</p>
      <p class="text-xs text-white/40 mt-4">Tarkista my√∂hemmin uudelleen tai seuraa suoraan Instagramissa.</p>
    </div>

    <div class="text-center">
      <a
        href={instagramUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 bg-accent/20 hover:bg-accent/30 border border-accent/50 rounded-full text-accent font-semibold tracking-wide uppercase text-xs md:text-sm shadow-[0_0_25px_rgba(0,240,255,0.35)] transition-transform duration-300 hover:scale-105"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z" />
        </svg>
        Seuraa @djsnabu
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script define:vars={{ FEED_URL, instagramUrl, maxPosts }}>
  async function loadFeed() {
    const grid = document.getElementById('ig-grid');
    const errorBox = document.getElementById('ig-error');

    if (!FEED_URL) {
      grid.innerHTML = '';
      errorBox.classList.remove('hidden');
      return;
    }

    try {
      const res = await fetch(FEED_URL);
      if (!res.ok) throw new Error(`${res.status}`);
      const data = await res.json();

      const items = Array.isArray(data)
        ? data
        : Array.isArray(data.data)
        ? data.data
        : Array.isArray(data.posts)
        ? data.posts
        : [];

      const posts = items
        .filter((p) => {
          const url =
            p.media_url || p.mediaUrl ||
            p.thumbnail_url || p.thumbnailUrl ||
            p.sizes?.large?.mediaUrl || p.sizes?.medium?.mediaUrl ||
            p.sizes?.small?.mediaUrl || p.sizes?.full?.mediaUrl;
          return !!url;
        })
        .sort((a, b) => {
          const at = a.timestamp ? new Date(a.timestamp).getTime() : 0;
          const bt = b.timestamp ? new Date(b.timestamp).getTime() : 0;
          return bt - at;
        })
        .slice(0, maxPosts);

      if (!posts.length) {
        grid.innerHTML = '';
        errorBox.classList.remove('hidden');
        return;
      }

      grid.innerHTML = posts.map((post) => {
        const isVideo = post.mediaType === 'VIDEO';
        const fromSizes =
          post.sizes?.large?.mediaUrl ||
          post.sizes?.medium?.mediaUrl ||
          post.sizes?.small?.mediaUrl ||
          post.sizes?.full?.mediaUrl || '';

        const image = isVideo
          ? post.thumbnail_url || post.thumbnailUrl || fromSizes || post.mediaUrl || post.media_url || ''
          : post.media_url || post.mediaUrl || post.thumbnail_url || post.thumbnailUrl || fromSizes || '';

        const href = post.permalink || instagramUrl;
        const caption = post.caption || '';

        return `
          <a href="${href}" target="_blank" rel="noopener noreferrer"
            class="glass-effect rounded-2xl overflow-hidden aspect-square group relative cursor-pointer hover:scale-[1.02] transition-transform duration-300">
            <img
              src="${image}"
              alt="${caption.replace(/"/g, '&quot;').slice(0, 100)}"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            ${caption ? `
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
              <p class="text-sm text-white/90 line-clamp-3 text-left">${caption.replace(/</g, '&lt;').replace(/>/g, '&gt;').slice(0, 200)}</p>
            </div>` : ''}
          </a>`;
      }).join('');

    } catch (err) {
      console.error('Instagram feed error:', err);
      grid.innerHTML = '';
      errorBox.classList.remove('hidden');
    }
  }

  loadFeed();
</script>
