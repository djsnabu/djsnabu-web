---
interface Props {
  /** Instagram-profiilin URL "Seuraa"-napille */
  instagramUrl?: string;
  /** Kuinka monta postausta haetaan (max 25 per pyyntö) */
  maxPosts?: number;
}

interface BeholdItem {
  id: string;
  caption?: string;
  media_url?: string;
  mediaUrl?: string;
  thumbnail_url?: string;
  thumbnailUrl?: string;
  permalink?: string;
  timestamp?: string;
  like_count?: number;
  mediaType?: string;
  sizes?: {
    small?: { mediaUrl?: string | null };
    medium?: { mediaUrl?: string | null };
    large?: { mediaUrl?: string | null };
    full?: { mediaUrl?: string | null };
  };
}

const {
  instagramUrl = 'https://instagram.com/djsnabu',
  maxPosts = 6,
} = Astro.props;

// Behold / muu JSON-feed: PUBLIC_INSTAGRAM_FEED_URL
const FEED_URL = import.meta.env.PUBLIC_INSTAGRAM_FEED_URL;

let posts: BeholdItem[] = [];
let error: string | null = null;

if (!FEED_URL) {
  // Ei rikota sivua jos URL puuttuu
  error = 'Instagram-feed ei ole vielä kytketty.';
} else {
  try {
    const response = await fetch(FEED_URL, {
      method: 'GET',
      headers: { Accept: 'application/json' },
    });

    if (!response.ok) {
      throw new Error(`API request failed: ${response.status} ${response.statusText}`);
    }

    const data = await response.json();
    const items: BeholdItem[] = Array.isArray(data)
      ? data
      : Array.isArray(data.data)
      ? data.data
      : Array.isArray(data.posts)
      ? data.posts
      : [];

    posts = items
      .filter(
        (item) =>
          item.media_url ||
          item.mediaUrl ||
          item.thumbnail_url ||
          item.thumbnailUrl ||
          item.sizes?.small?.mediaUrl ||
          item.sizes?.medium?.mediaUrl ||
          item.sizes?.large?.mediaUrl ||
          item.sizes?.full?.mediaUrl
      )
      .sort((a, b) => {
        const at = a.timestamp ? new Date(a.timestamp).getTime() : 0;
        const bt = b.timestamp ? new Date(b.timestamp).getTime() : 0;
        return bt - at;
      })
      .slice(0, maxPosts);

    if (!posts.length) {
      error = 'Ei julkaisuja saatavilla juuri nyt.';
    }
  } catch (err) {
    console.error('Instagram Feed Error (Behold):', err);
    error = 'Instagram-feed ei ole tällä hetkellä saatavilla.';
  }
}

const hasPosts = !error && posts.length > 0;
---

{hasPosts && (
  <section id="gallery" class="py-20 px-4">
    <div class="container mx-auto max-w-7xl">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
        <span class="text-accent">Instagram</span>
      </h2>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
        {posts.map((post) => {
          const isVideo = post.mediaType === 'VIDEO';
          const fromSizes =
            post.sizes?.small?.mediaUrl ||
            post.sizes?.medium?.mediaUrl ||
            post.sizes?.large?.mediaUrl ||
            post.sizes?.full?.mediaUrl ||
            '';

          const image = isVideo
            ? post.thumbnail_url ||
              post.thumbnailUrl ||
              fromSizes ||
              post.mediaUrl ||
              post.media_url ||
              ''
            : post.media_url ||
              post.mediaUrl ||
              post.thumbnail_url ||
              post.thumbnailUrl ||
              fromSizes ||
              '';

          return (
            <a
              href={post.permalink || instagramUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="glass-effect rounded-2xl overflow-hidden aspect-square group relative cursor-pointer hover:scale-[1.02] transition-transform duration-300"
            >
              <img
                src={image}
                alt={post.caption || 'Instagram post by DJ Snabu'}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />

              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
                {post.caption && (
                  <p class="text-sm text-white/90 line-clamp-3 text-left">
                    {post.caption}
                  </p>
                )}
              </div>
            </a>
          );
        })}
      </div>

      <div class="text-center">
        <a
          href={instagramUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-4 bg-accent/20 hover:bg-accent/30 border border-accent/50 rounded-full text-accent font-semibold tracking-wide uppercase text-xs md:text-sm shadow-[0_0_25px_rgba(0,240,255,0.35)] transition-transform duration-300 hover:scale-105"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
