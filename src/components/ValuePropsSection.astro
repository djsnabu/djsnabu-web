---
const items = [
  {
    title: 'Varmuus',
    description: 'Luotettava kumppani, joka hoitaa sovitut asiat ajallaan.',
  },
  {
    title: 'Monipuolisuus',
    description: 'Laaja musiikkikirjasto 80-luvulta tämän päivän hitteihin.',
  },
  {
    title: 'Ammattitaito',
    description: 'Huippuluokan laitteisto ja korvaamatonta pelisilmää tunnelmalle.',
  },
];
---

<section class="py-14 px-4">
  <div class="container mx-auto max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="glass-effect rounded-2xl p-6 md:p-7 hover:scale-[1.02] transition-transform duration-300">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-xl font-bold text-white">{item.title}</h3>
            <span class="h-2 w-2 rounded-full bg-accent shadow-[0_0_18px_rgba(0,240,255,0.75)]"></span>
          </div>
          <p class="text-white/70 leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

