---
const events = [
  {
    dateLabel: 'La 7.3.2026',
    title: 'Hollaback! @ Freetime',
    location: 'Jyväskylä',
    time: '23:00 - 04:00',
    notes: 'Suomen kovimmat R&B ja Hip Hop -bileet.'
  },
];
---

<section id="keikat" class="py-20 px-4 bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
  <div class="container mx-auto max-w-5xl">
    <div class="flex flex-col md:flex-row md:items-end gap-6 mb-12">
      <div>
        <p class="text-xs tracking-[0.3em] uppercase text-white/60 mb-3">Kalenteri</p>
        <h2 class="text-4xl md:text-5xl font-bold text-white">Tulevat keikat</h2>
      </div>
      <p class="text-white/70 md:text-right md:ml-auto">
        Päivitetty 22.2.2026 · vapaita viikonloppuja keväälle kysymällä
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {events.map((event) => (
        <article class="glass-effect border border-white/10 rounded-2xl p-6 hover:border-accent/70 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full">
          <p class="text-sm uppercase tracking-wide text-accent/90 mb-2">{event.dateLabel}</p>
          <h3 class="text-xl font-bold text-white mb-1">{event.title}</h3>
          <p class="text-white/60 text-sm mb-4 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            {event.location}
          </p>
          
          <div class="mt-auto pt-4 border-t border-white/5">
             <div class="flex justify-between text-sm text-white/80 mb-2">
                <span class="text-white/50">Aika</span>
                <span>{event.time}</span>
             </div>
             <p class="text-xs text-white/50">{event.notes}</p>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-accent text-slate-900 font-semibold uppercase tracking-wide hover:scale-105 transition shadow-lg shadow-accent/20">
        Pyydä tarjous & varaa oma ilta
      </a>
    </div>
  </div>
</section>
