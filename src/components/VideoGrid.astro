---
interface Props {
  videos?: Array<{ id: string; title: string }>;
}

const { videos = [
  { id: 'dQw4w9WgXcQ', title: 'DJ Set 1' },
  { id: 'dQw4w9WgXcQ', title: 'DJ Set 2' },
  { id: 'dQw4w9WgXcQ', title: 'DJ Set 3' },
] } = Astro.props;
---

<section id="videos" class="py-20 px-4">
  <div class="container mx-auto max-w-7xl">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
      <span class="text-accent">YouTube</span>
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {videos.map((video) => (
        <div class="glass-effect rounded-xl overflow-hidden hover:scale-105 transition-transform duration-300">
          <div class="w-full aspect-video relative">
            <lite-youtube
              videoid={video.id}
              style={`background-image: url('https://i.ytimg.com/vi/${video.id}/hqdefault.jpg');`}
            ></lite-youtube>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-white">{video.title}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import 'lite-youtube-embed/src/lite-yt-embed.css';
  import 'lite-youtube-embed/src/lite-yt-embed.js';
</script>
