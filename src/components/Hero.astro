---
import { Image } from 'astro:assets';
import djHero from '../assets/dj-hero.jpg';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden noise-overlay">
  <!-- DJ background image (replace src/assets/dj-hero.png with your photo) -->
  <div class="absolute inset-0 -z-20">
    <Image
      src={djHero}
      alt="DJ SNABU"
      class="h-full w-full object-cover object-center"
      widths={[640, 960, 1280, 1920]}
      sizes="100vw"
      loading="eager"
      format="webp"
    />
    <div class="absolute inset-0 bg-black/60"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/80"></div>
  </div>

  <!-- Animated gradient glow background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-accent/20 via-transparent to-accent/10 animate-glow-pulse"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent/10 rounded-full blur-3xl animate-glow-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <!-- Main content -->
  <div class="relative z-10 text-center px-4">
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-black mb-6 tracking-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-accent to-white animate-glow-pulse">
        DJ SNABU
      </span>
    </h1>
    <p class="text-base md:text-xl text-white/70 max-w-3xl mx-auto leading-relaxed">
      DJ Snabu tuo oikean energian häihin, yritystapahtumiin ja klubi-iltoihin —
      saumattomat miksaukset, varma tunnelma ja 17 vuoden kokemus.
    </p>

    <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#contact"
        class="inline-flex items-center justify-center px-8 py-3 rounded-xl bg-accent text-black font-bold text-base hover:scale-105 transition-transform duration-200"
      >
        Pyydä tarjous
      </a>
      <a
        href="tel:0401950045"
        class="inline-flex items-center justify-center px-8 py-3 rounded-xl border border-white/30 text-white font-semibold text-base hover:bg-white/10 transition-colors duration-200"
      >
        Soita: 040 195 0045
      </a>
    </div>

    <div class="mt-6 text-sm md:text-base text-white/70">
      Häät • Yritystapahtumat • Klubit
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
